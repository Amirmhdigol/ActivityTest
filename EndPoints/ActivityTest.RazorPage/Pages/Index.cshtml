@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="table-responsive card card-body p-0">
    <table class="table table-bordered mb-0 text-center">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Is Active</th>
                <th>Operation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ActivityTypes)
            {
                <tr>
                    <td>
                        @item.Code
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.IsActive
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-page="Edit"> Edit </a>
                        <button class="btn btn-danger" asp-page="Delete"> Delete </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-success mt-3" asp-page="Add">Add Activity Type</a>
</div>